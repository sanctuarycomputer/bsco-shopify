<div class="homepage-infuse-module col-12">
  <div class="columns-wrapper border-top std-max-width mx-auto md-flex clearfix">
    <div class="left-section border-right-dashed col md-col-5 flex flex-column items-center relative">
      <div class="absolute-center col-12 center p2">
        <img class="col-5" src="{{ 'butter-pad.jpg' | asset_url }}" />
        <div class="link-text center mt3">
          <a class="center inline-block" href="{{section.settings.infuse_link}}" target="_blank">
            <span class="link-text bebas black block">{{section.settings.link_text_one}}</span>
            <span class="link-text bebas black block">{{section.settings.link_text_two}}</span>
          </a>
        </div>
      </div>
    </div>

    <div class="bg-image col-12 md-col-7">
      <div class="content preload-image" style="background: url('{{section.settings.bg_image | img_url: '1900x'}}') no-repeat; background-size: cover;"></div>
    </div>

    <div class="link-text-mobile center py2">
      <a class="center inline-block" href="{{section.settings.infuse_link}}" target="_blank">
        <span class="link-text bebas black block">{{section.settings.link_text_one}}</span>
        <span class="link-text bebas black block">{{section.settings.link_text_two}}</span>
      </a>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Homepage Infuse Module",
    "settings": [
      {
        "type": "text",
        "id": "link_text_one",
        "label": "Link Text One",
        "placeholder": "Our Butter & Oil Recipes Are Easy"
      },
      {
        "type": "text",
        "id": "link_text_two",
        "label": "Link Text Two",
        "placeholder": "(And is Ipad Compatible)"
      },
      {
        "type": "url",
        "id": "infuse_link",
        "label": "Infuse Link"
      },
      {
        "type": "image_picker",
        "id": "bg_image",
        "label": "Gif"
      }
    ],
    "presets": [
      {
        "name": "Homepage Infuse Module",
        "category": "Homepage"
      }
    ]
  }
{% endschema %}
