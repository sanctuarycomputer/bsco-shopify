<div class="contact">
  <div class="clearfix max-width-4 mx-auto">
    <h1 class="hide">Contact</h1>
    <div class="contact-section col col-12 mt4 clearfix">
      <div class="contact-image col sm-col-12 lg-col-4">
        <img  class="col-12"
              src="{{ section.settings.image_1.src | img_url: '600x' }}" />
      </div>
      <div class="contact-info col sm-col-12 lg-col-8">
        <h2 class="bebas subtitle white mt0">{{ section.settings.title_1 }}</h2>
        <p class="copy white">{{ section.settings.copy_1 }}</p>
        <p class="copy white"><a href="mailto:{{ section.settings.link_1 }}" target="_blank">{{ section.settings.link_1 }}</a></p>
      </div>
    </div>
    <div class="contact-section col col-12 my4 clearfix">
      <div class="contact-image col sm-col-12 lg-col-4">
        <img  class="col-12"
              src="{{ section.settings.image_2.src | img_url: '600x' }}" />
      </div>
      <div class="contact-info col sm-col-12 lg-col-8">
        <h2 class="bebas subtitle white mt0">{{ section.settings.title_2 }}</h2>
        <p class="copy white">{{ section.settings.copy_2 }}</p>
        <p class="copy white"><a href="mailto:{{ section.settings.link_2 }}" target="_blank">{{ section.settings.link_2 }}</a></p>
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Contact Info",
    "settings": [
      {
       "type": "header",
       "content": "Top Section"
      },
      {
        "type": "image_picker",
        "id": "image_1",
        "label": "Image 1"
      },
      {
        "type": "text",
        "id": "title_1",
        "label": "Title 1",
        "placeholder": "I have an issue with my order"
      },
      {
        "type": "text",
        "id": "copy_1",
        "label": "Copy 1",
        "placeholder": "For assistance or whatevers"
      },
      {
        "type": "text",
        "id": "link_1",
        "label": "Email Address 1",
        "placeholder": "nugsforhugs@bakingsupply.co"
      },
      {
       "type": "header",
       "content": "Bottom Section"
      },
      {
        "type": "image_picker",
        "id": "image_2",
        "label": "Image 2"
      },
      {
        "type": "text",
        "id": "title_2",
        "label": "Title 2",
        "placeholder": "I have an issue with my order"
      },
      {
        "type": "text",
        "id": "copy_2",
        "label": "Copy 2",
        "placeholder": "For assistance or whatevers"
      },
      {
        "type": "text",
        "id": "link_2",
        "label": "Email Address 2",
        "placeholder": "nugsforhugs@bakingsupply.co"
      }
    ],
    "presets": [
      {
        "name": "Contact Info",
        "category": "Global"
      }
    ]
  }
{% endschema %}
