<nav class="nav">
  <div class="col-12 flex std-max-width mx-auto">
    <div class="mobile-nav-toggle col-2 flex justify-center items-center py2">
      {% include 'icon-leaf' %}
    </div>
    <div class="col-8 lg-col-2 flex justify-center items-center py2 pr3">
      <a class="inline-block" href="/">
        {% include 'logo-cloud' %}
      </a>
    </div>
    <div class="link-list col-8 border-left">
      <div class="border-right-dashed col-12 lg-flex items-center height-100 justify-between py2 px3">
