{% if cart.item_count > 0 %}
  <form action="/cart" method="post" novalidate>
    
    <div id="cart" class="cart relative clearfix">
      <div class="cart-items col-12 clearfix mx-auto max-width-4">
        {% for item in cart.items %}
          {% include 'cart-line-item', product: item %}
        {% endfor %}
      </div>
      
      {% section 'cart-upsell' %}

      <div  class="checkout-button col col-12 border-top center clearfix relative"
            style="background-image: url({{ 'dripping-eye-red-pink.svg' | asset_url }});">
        <div class="gradient-blue">
        </div>
        <a href="/checkout" title="Checkout"> 
          <div class="col col-12 absolute-center">
            <span class="uppercase blue title bebas">{{ 'cart.general.checkout' | t }} &mdash; </span>
            <span class="cart-price uppercase blue title bebas">{{ cart.total_price | money }}</span>
          </div>
        </a>
      </div>
    </div>

  </form>

{% else %}
  <h1>{{ 'cart.general.title' | t }}</h1>

  {% comment %}
  Cart empty state
  {% endcomment %}
  <div class="supports-cookies">
    <p>{{ 'cart.general.empty' | t }}</p>
    <p>{{ 'cart.general.continue_browsing_html' | t }}</p>
  </div>

  {% comment %}
  Cart no cookies state
  ---------------------
  Browser cookies are required to use the cart. If cookies aren't enabled in the
  browser a message is displayed prompting the user to enable them.
  {% endcomment %}
  <div class="supports-no-cookies">
    <p>{{ 'cart.general.cookies_required' | t }}</p>
  </div>
{% endif %}
