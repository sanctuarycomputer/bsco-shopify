@font-face {
  font-family: 'GT America Mono';
  src: url('https://d25abud0gs2vmh.cloudfront.net/fonts/GTAmericaMonoRegularV2.eot'); /* IE9 Compat Modes */
  src: url('https://d25abud0gs2vmh.cloudfront.net/fonts/GTAmericaMonoRegularV2.eot?#iefix') format('embedded-opentype'), /* IE6-IE8 */
       url('https://d25abud0gs2vmh.cloudfront.net/fonts/GTAmericaMonoRegularV2.woff2') format('woff2'), /* Super Modern Browsers */
       url('https://d25abud0gs2vmh.cloudfront.net/fonts/GTAmericaMonoRegularV2.woff') format('woff'), /* Pretty Modern Browsers */
       url('https://d25abud0gs2vmh.cloudfront.net/fonts/GTAmericaMonoRegularV2.ttf')  format('truetype'), /* Safari, Android, iOS */
       url('https://d25abud0gs2vmh.cloudfront.net/fonts/GTAmericaMonov2-Regular.svg') format('svg'); /* Legacy iOS */
  font-weight: normal;
  font-style: normal;
}

/* fixes choppy text in chrome */
@media screen and (-webkit-min-device-pixel-ratio:0) {
  @font-face {
    font-family: 'GT America Mono';
    src: url('https://d25abud0gs2vmh.cloudfront.net/fonts/GTAmericaMonov2-Regular.svg') format('svg');
  }
}
