@font-face {
  font-family: 'GT America Mono';
  src: url("{{ 'GTAmericaMonoRegularV2.eot' | asset_url }}"); /* IE9 Compat Modes */
  src: url("{{ 'GTAmericaMonoRegularV2.eot' | asset_url }}?#iefix") format('embedded-opentype'), /* IE6-IE8 */
       url("{{ 'GTAmericaMonoRegularV2.woff2' | asset_url }}") format('woff2'), /* Super Modern Browsers */
       url("{{ 'GTAmericaMonoRegularV2.woff' | asset_url }}") format('woff'), /* Pretty Modern Browsers */
       url("{{ 'GTAmericaMonoRegularV2.ttf' | asset_url }}")  format('truetype'), /* Safari, Android, iOS */
       url("{{ 'GTAmericaMonoRegularV2.svg' | asset_url }}#GT America Mono") format('svg'); /* Legacy iOS */
  font-weight: normal;
  font-style: normal;
}

/* fixes choppy text in chrome */
@media screen and (-webkit-min-device-pixel-ratio:0) {
  @font-face {
    font-family: 'GT America Mono';
    src: url("{{ 'GTAmericaMonoRegularV2.svg' | asset_url }}") format('svg');
  }
}
